#include <bits/stdc++.h>
using namespace std;

int main() {
    int n=0;
    cin>>n;
    for(int i=0;i<n;i++){
        string s;
        cin>>s;
        int x=0;
        x=s.size();
        if(x>10)
        cout<<s[0]<<x-2<<s[x-1]<<'\n';
        else
        cout<<s<<'\n';
        
        
        
    }



	return 0;
}
